<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">


        <ImageView
            android:id="@+id/iv_repos_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_name"
            tools:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/tv_repos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_48"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="RxFluxAppRxFluxAppRxFluxAppRxFluxAppRxFluxAppRxFluxAppRxFluxAppRxFluxAppRxFluxApp" />

        <TextView
            android:id="@+id/tv_repos_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_watch"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_watch"
            tools:text="CoolFire2015" />

        <TextView
            android:id="@+id/tv_repos_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_repos_des"
            app:layout_constraintTop_toBottomOf="@+id/tv_repos_des"
            tools:text="kotlin" />

        <TextView
            android:id="@+id/tv_repos_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_repos_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_repos_name"
            tools:text="基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架" />

        <TextView
            android:id="@+id/tv_repos_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_language"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_language"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_repos_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_star"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_star"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_repos_star_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_owner"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_repos_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_fork"
            app:layout_constraintTop_toTopOf="@+id/tv_repos_fork"
            tools:text="100" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>