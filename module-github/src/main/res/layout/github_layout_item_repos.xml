<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">


        <ImageView
            android:id="@+id/iv_repos_star"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_24"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@drawable/ic_star" />

        <!-- app:layout_constrainedWidth 内容超出时，强制约束生效-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_repos_star"
            app:layout_constraintEnd_toStartOf="@id/iv_repos_star"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_repos_star"
            tools:text="tv_repos_ownertv_repos_ownertv_repos_ownertv_repos_ownertv_repos_owner" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_repos_des"
            app:layout_constraintTop_toBottomOf="@+id/tv_repos_des"
            tools:text="kotlin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_repos_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_repos_name"
            tools:text="基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawableStart="@drawable/ic_star"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_repos_language"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_language"
            tools:text="100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawableStart="@drawable/ic_fork"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_repos_language"
            app:layout_constraintStart_toEndOf="@+id/tv_repos_star"
            tools:text="100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repos_star_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_repos_language"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="100 this mouth" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>