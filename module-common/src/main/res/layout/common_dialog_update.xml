<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            tools:text="@string/common_ok" />

        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_edit_border"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            tools:text="@string/common_hint_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textSize="@dimen/sp_18" />

            <View style="@style/ViewDividerVerticalStyle" />

            <TextView
                android:id="@+id/tv_update_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:text="@string/common_ok"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
