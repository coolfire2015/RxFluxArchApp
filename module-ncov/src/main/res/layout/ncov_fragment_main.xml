<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rfl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnablePreviewInEditMode="true"
    app:srlPrimaryColor="?android:attr/colorPrimary"
    tools:context=".ui.main.view.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/CommonCardView"
            android:layout_height="@dimen/dp_320">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_serious"
                    style="@style/CommonTextAppearanceInfo"
                    android:text="@string/ncov_count_serious"
                    app:layout_constraintBaseline_toBaselineOf="@+id/main_tv_suspected"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/main_tv_suspected" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_suspected"
                    style="@style/CommonTextAppearanceInfo"
                    android:text="@string/ncov_count_suspected"
                    app:layout_constraintBaseline_toBaselineOf="@+id/main_tv_current"
                    app:layout_constraintEnd_toStartOf="@+id/main_tv_serious"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/main_tv_current" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_confirmed"
                    style="@style/CommonTextAppearanceInfo"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/ncov_count_confirmed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/main_tv_dead"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_current"
                    style="@style/CommonTextAppearanceInfo"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/ncov_count_current"
                    app:layout_constraintBottom_toTopOf="@+id/main_tv_confirmed"
                    app:layout_constraintEnd_toStartOf="@+id/main_tv_suspected"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_cured"
                    style="@style/CommonTextAppearanceInfo"
                    android:text="@string/ncov_count_cured"
                    app:layout_constraintBaseline_toBaselineOf="@+id/main_tv_dead"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/main_tv_dead" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_dead"
                    style="@style/CommonTextAppearanceInfo"
                    android:text="@string/ncov_count_dead"
                    app:layout_constraintBaseline_toBaselineOf="@+id/main_tv_confirmed"
                    app:layout_constraintEnd_toStartOf="@+id/main_tv_cured"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/main_tv_confirmed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_note1"
                    style="@style/CommonTextAppearanceInfo"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/ncov_count_confirmed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_note3"
                    style="@style/CommonTextAppearanceInfo"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintStart_toStartOf="@+id/main_tv_note2"
                    app:layout_constraintTop_toBottomOf="@+id/main_tv_note2"
                    tools:text="@string/ncov_count_confirmed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_tv_note2"
                    style="@style/CommonTextAppearanceInfo"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintStart_toStartOf="@+id/main_tv_note1"
                    app:layout_constraintTop_toBottomOf="@+id/main_tv_note1"
                    tools:text="基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架基于Flux架构的模块化框架" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_card_rumor"
            style="@style/CommonItemCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Red"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginStart="@dimen/dp_24"
                    android:background="@drawable/ic_function"
                    android:padding="@dimen/dp_20"
                    app:srcCompat="@drawable/ic_rumor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ncov_title_rumor"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/ncov_info_rumor"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_card_area"
            style="@style/CommonItemCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_primary_dark"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginStart="@dimen/dp_24"
                    android:background="@drawable/ic_function"
                    android:padding="@dimen/dp_20"
                    app:srcCompat="@drawable/ic_area" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ncov_title_area"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/ncov_info_area"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_card_news"
            style="@style/CommonItemCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Green"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginStart="@dimen/dp_24"
                    android:background="@drawable/ic_function"
                    android:padding="@dimen/dp_20"
                    app:srcCompat="@drawable/ic_news" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ncov_title_news"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/ncov_info_news"
                        android:textColor="@color/White"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
